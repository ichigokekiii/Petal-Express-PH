@{ ViewBag.Title = "Login"; }
<div ng-controller="authController">
    <section class="bg-white py-20">
        <div class="container mx-auto px-6 max-w-lg text-center">
            <h1 class="text-4xl font-black text-[#27334B]">Login</h1>
            @Html.Partial("_FlowerDivider")
            <form class="mt-8 text-left space-y-6" ng-submit="login()">
                <div>
                    <label class="font-semibold text-gray-700">Email Address</label>
                    <input type="email" class="mt-2 w-full px-4 py-3 border border-gray-300 rounded-lg" ng-model="credentials.email" required />
                </div>
                <div>
                    <label class="font-semibold text-gray-700">Password</label>
                    <input type="password" class="mt-2 w-full px-4 py-3 border border-gray-300 rounded-lg" ng-model="credentials.password" required />
                </div>
                <button type="submit" class="w-full py-3 bg-[#5977AF] text-white font-bold rounded-full">Login</button>
                <div class="text-center"><p class="text-gray-600">No account? <a href="@Url.Action("Register", "Home")" class="font-bold text-[#5977AF]">Register here</a></p></div>
            </form>
        </div>
    </section>
</div>