@{ ViewBag.Title = "Register"; }

<div ng-controller="authController">
    <section class="bg-white py-20">
        <div class="container mx-auto px-6 max-w-lg text-center">
            <h1 class="text-4xl font-black text-[#27334B]">Create an Account</h1>
            @Html.Partial("_FlowerDivider")

            <form class="mt-8 text-left space-y-6" ng-submit="registerUser()" name="registerForm">
                <div>
                    <label class="font-semibold text-gray-700">Full Name</label>
                    <input type="text" class="mt-2 w-full px-4 py-3 border border-gray-300 rounded-lg" placeholder="Juan dela Cruz" ng-model="newUser.name" required />
                </div>
                <div>
                    <label class="font-semibold text-gray-700">Email Address</label>
                    <input type="email" class="mt-2 w-full px-4 py-3 border border-gray-300 rounded-lg" placeholder="you@example.com" ng-model="newUser.email" required />
                </div>
                <button type="submit" class="w-full py-3 bg-[#5977AF] text-white font-bold rounded-full" ng-disabled="registerForm.$invalid">Register</button>
            </form>
        </div>
    </section>

    <section class="bg-gray-50 py-12" ng-show="users.length > 0">
        <div class="container mx-auto px-6">
            <h2 class="text-2xl font-bold text-center text-[#27334B] mb-8">Registered Users</h2>
            <table class="min-w-full bg-white shadow-md rounded-lg">
                <thead>
                    <tr>
                        <th class="py-3 px-4 border-b text-left">Name</th>
                        <th class="py-3 px-4 border-b text-left">Email</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="user in users" class="border-b">
                        <td class="py-3 px-4">{{user.name}}</td>
                        <td class="py-3 px-4">{{user.email}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
</div>