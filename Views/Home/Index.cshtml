@section scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            function horizontalScroll(event, element) {
                event.preventDefault();
                element.scrollLeft += event.deltaY;
            }

            const productsScrollContainer = document.getElementById('products-scroll');
            const eventsScrollContainer = document.getElementById('events-scroll');

            if (productsScrollContainer) {
                productsScrollContainer.addEventListener('wheel', function (e) {
                    horizontalScroll(e, productsScrollContainer);
                });
            }

            if (eventsScrollContainer) {
                eventsScrollContainer.addEventListener('wheel', function (e) {
                    horizontalScroll(e, eventsScrollContainer);
                });
            }
        });
    </script>
