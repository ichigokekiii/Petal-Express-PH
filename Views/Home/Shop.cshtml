@{
    ViewBag.Title = "Shop";
}

<div ng-controller="shopController" ng-click="hideDropdown()">

    <section class="bg-[#E0F1FF] py-20 text-center">
        <div class="container mx-auto px-6">
            <h1 class="text-5xl font-black text-[#27334B]">Welcome to our Online Shop</h1>
            @Html.Partial("_FlowerDivider")
            <p class="mt-4 max-w-2xl mx-auto text-gray-600">
                Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
            </p>
        </div>
    </section>

    <section class="bg-white py-16 -mt-16 z-10 relative rounded-t-2xl">
        <div class="container mx-auto px-6">

            <div class="flex flex-col md:flex-row justify-between items-center gap-6 mb-12">
                <div class="relative w-full md:w-1/3">
                    <input type="text" placeholder="Search..." class="w-full px-4 py-3 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-[#5977AF]"
                           ng-focus="showDropdown = true" ng-click="$event.stopPropagation()" />
                    <button class="absolute top-1/2 right-3 -translate-y-1/2 p-2 bg-[#5977AF] rounded-full text-white">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
                    </button>
                    <div ng-show="showDropdown" class="absolute top-full left-0 mt-2 w-full bg-white border border-gray-200 rounded-lg shadow-xl z-20">
                        <ul><li ng-repeat="flower in flowerTypes" class="px-4 py-2 hover:bg-gray-100 cursor-pointer">{{flower}}</li></ul>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <button class="px-8 py-3 bg-[#5977AF] text-white font-semibold rounded-full">Sort by</button>
                    <button class="px-8 py-3 bg-[#5977AF] text-white font-semibold rounded-full">Filter by</button>
                </div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                <a href="@Url.Action("ProductDetail", "Home")" class="block hover:opacity-80 transition-opacity" ng-repeat="product in products.slice(currentPage*pageSize, (currentPage+1)*pageSize)">
                    <div>
                        <div class="bg-[#DFEDF9] h-56 rounded-lg"></div>
                        <div class="mt-4">
                            <div class="flex justify-between items-center">
                                <h3 class="font-bold text-lg text-[#27334B]">{{product.name}}</h3>
                                <div class="flex items-center text-sm text-gray-500">
                                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                                    <span class="ml-1">{{product.rating}} ({{product.reviews}})</span>
                                </div>
                            </div>
                            <p class="font-black text-xl text-[#27334B]">₱ {{product.price}}</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="flex justify-center items-center space-x-4 mt-16">
                <button ng-click="prevPage()" class="p-2 rounded-full text-gray-400 disabled:opacity-50" ng-disabled="currentPage == 0">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
                </button>
                <button ng-repeat="page in [].constructor(totalPages) track by $index"
                        ng-click="setCurrentPage($index)"
                        ng-class="{'bg-[#27334B] text-white': currentPage == $index, 'text-gray-500': currentPage != $index}"
                        class="px-4 py-2 rounded-full font-semibold">
                    {{$index + 1}}
                </button>
                <button ng-click="nextPage()" class="p-2 rounded-full text-gray-400 disabled:opacity-50" ng-disabled="currentPage >= totalPages - 1">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L10.586 10 7.293 6.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </button>
            </div>

        </div>
    </section>
</div>